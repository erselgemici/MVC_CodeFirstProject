@model MyAcademy_MVC_CodeFirst.Data.Entities.AppUser
@{
    ViewBag.Title = "Profilim";
    Layout = "~/Areas/Staff/Views/Shared/_StaffLayout.cshtml";
}

<div class="max-w-2xl mx-auto">

    @if (ViewBag.Success != null)
    {
        <div class="bg-green-100 border border-green-200 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Başarılı!</strong>
            <span class="block sm:inline">@ViewBag.Success</span>
        </div>
    }

    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="p-6 border-b border-slate-100 bg-slate-50 flex items-center gap-4">
            <div class="w-16 h-16 rounded-full overflow-hidden border-2 border-white shadow-sm">
                <img src="https://ui-avatars.com/api/?name=@Model.FullName&background=0d6efd&color=fff&size=128" alt="Profile" class="w-full h-full object-cover">
            </div>
            <div>
                <h2 class="text-xl font-bold text-slate-800">Profil Ayarları</h2>
                <p class="text-sm text-slate-500">Kişisel bilgilerinizi buradan güncelleyebilirsiniz.</p>
            </div>
        </div>

        <div class="p-6">
            <form method="post">
                @Html.HiddenFor(x => x.UserID)

                <div class="grid gap-6">
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">Ad Soyad</label>
                        @Html.TextBoxFor(x => x.FullName, new { @class = "w-full rounded-lg border-slate-300 focus:ring-primary focus:border-primary", required = "required" })
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">E-posta Adresi</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "w-full rounded-lg border-slate-300 focus:ring-primary focus:border-primary", required = "required", type = "email" })
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">Şifre</label>
                        @Html.TextBoxFor(x => x.Password, new { @class = "w-full rounded-lg border-slate-300 focus:ring-primary focus:border-primary", required = "required" })
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">Yetki Seviyesi</label>
                        <input type="text" value="@Model.Role" disabled class="w-full rounded-lg border-slate-200 bg-slate-50 text-slate-500 cursor-not-allowed" />
                    </div>
                </div>

                <div class="mt-8 pt-6 border-t border-slate-100 flex justify-end">
                    <button class="bg-primary hover:bg-blue-700 text-white font-bold py-2.5 px-6 rounded-lg transition-colors flex items-center gap-2">
                        <span class="material-symbols-outlined text-sm">save</span>
                        Değişiklikleri Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
