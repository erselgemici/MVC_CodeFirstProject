@using MyAcademy_MVC_CodeFirst.Data.Entities
@model List<Sale>
@{
    ViewBag.Title = "Satış Geçmişi";
    Layout = "~/Areas/Staff/Views/Shared/_StaffLayout.cshtml";
}

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <div class="p-6 border-b border-slate-200 flex justify-between items-center">
        <h2 class="text-xl font-bold text-navy-dark">Satış Geçmişim</h2>
        <a href="/Staff/Sales/NewSale" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
            + Yeni Satış Ekle
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-slate-600">
            <thead class="text-xs text-slate-700 uppercase bg-slate-50">
                <tr>
                    <th class="px-6 py-3">#</th>
                    <th class="px-6 py-3">Müşteri</th>
                    <th class="px-6 py-3">Poliçe</th>
                    <th class="px-6 py-3">Tarih</th>
                    <th class="px-6 py-3 text-right">Tutar</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr class="bg-white border-b hover:bg-slate-50 transition-colors">
                            <td class="px-6 py-4 font-medium text-slate-900">@item.SaleID</td>

                            <td class="px-6 py-4">
                                <div class="flex items-center gap-2">
                                    <div class="w-8 h-8 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center font-bold text-xs">
                                        @(item.Customer != null ? item.Customer.FirstName.Substring(0,1) : "?")
                                    </div>
                                    <span class="font-medium text-slate-700">
                                        @(item.Customer != null ? item.Customer.FirstName + " " + item.Customer.LastName : "Silinmiş Müşteri")
                                    </span>
                                </div>
                            </td>

                            <td class="px-6 py-4">
                                @if (item.InsurancePolicy != null)
                                {
                                    <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded border border-blue-200">
                                        @item.InsurancePolicy.PolicyName
                                    </span>
                                }
                                else
                                {
                                    <span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded">Silinmiş Poliçe</span>
                                }
                            </td>

                            <td class="px-6 py-4 text-slate-500">
                                @item.SaleDate.ToString("dd.MM.yyyy HH:mm")
                            </td>

                            <td class="px-6 py-4 text-right font-bold text-emerald-600">
                                ₺@item.Amount.ToString("N2")
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="px-6 py-4 text-center text-slate-500">
                            Henüz hiç satış kaydı bulunmuyor.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
