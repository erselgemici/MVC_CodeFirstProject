@using MyAcademy_MVC_CodeFirst.Data.Entities
@model List<Customer>

@{
    ViewBag.Title = "Müşteri Listesi";
    Layout = "~/Areas/Staff/Views/Shared/_StaffLayout.cshtml";
}

<div class="bg-white rounded-lg shadow-sm overflow-hidden">

    <div class="p-6 border-b border-slate-200 flex flex-col sm:flex-row justify-between items-center gap-4">
        <h2 class="text-xl font-bold text-navy-dark flex items-center gap-2">
            <span class="material-symbols-outlined text-primary">groups</span>
            Müşteri Portföyü
        </h2>

        @using (Html.BeginForm("Index", "Customer", FormMethod.Get, new { @class = "flex w-full sm:w-auto" }))
        {
            <div class="relative w-full sm:w-64">
                <input type="text" name="search" placeholder="İsim veya Şehir Ara..."
                       class="w-full pl-10 pr-4 py-2 bg-slate-50 border border-slate-300 rounded-lg text-sm focus:ring-primary focus:border-primary">
                <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-lg">search</span>
            </div>
            <button class="ml-2 bg-primary hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                Ara
            </button>
        }
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-slate-600">
            <thead class="text-xs text-slate-700 uppercase bg-slate-50 border-b border-slate-200">
                <tr>
                    <th class="px-6 py-3">Müşteri</th>
                    <th class="px-6 py-3">İletişim</th>
                    <th class="px-6 py-3">Lokasyon</th>
                    <th class="px-6 py-3">Kayıt Tarihi</th>
                    <th class="px-6 py-3 text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr class="bg-white border-b hover:bg-slate-50 transition-colors">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center font-bold text-sm shrink-0">
                                        @(item.FirstName.Substring(0,1))@(item.LastName.Substring(0,1))
                                    </div>
                                    <div>
                                        <div class="font-bold text-slate-800">@item.FirstName @item.LastName</div>
                                        <div class="text-xs text-slate-500">ID: #@item.CustomerID</div>
                                    </div>
                                </div>
                            </td>

                            <td class="px-6 py-4">
                                <div class="flex flex-col gap-1">
                                    <span class="flex items-center gap-1 text-xs">
                                        <i class="fa fa-phone text-slate-400"></i> @item.Phone
                                    </span>
                                    <span class="flex items-center gap-1 text-xs">
                                        <i class="fa fa-envelope text-slate-400"></i> @item.Email
                                    </span>
                                </div>
                            </td>

                            <td class="px-6 py-4">
                                <span class="bg-slate-100 text-slate-600 text-xs font-medium px-2.5 py-0.5 rounded border border-slate-200">
                                    <i class="fa fa-map-marker-alt mr-1"></i> @item.City
                                </span>
                            </td>

                            <td class="px-6 py-4">
                                @item.CreatedAt.ToString("dd.MM.yyyy")
                            </td>

                            <td class="px-6 py-4 text-center">
                                <a href="#" class="text-blue-600 hover:text-blue-800 font-medium text-xs border border-blue-200 px-3 py-1 rounded hover:bg-blue-50 transition-colors">
                                    Detay
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="px-6 py-8 text-center text-slate-500">
                            <div class="flex flex-col items-center justify-center">
                                <span class="material-symbols-outlined text-4xl mb-2 text-slate-300">person_off</span>
                                <p>Kayıtlı müşteri bulunamadı veya arama kriterine uymuyor.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
