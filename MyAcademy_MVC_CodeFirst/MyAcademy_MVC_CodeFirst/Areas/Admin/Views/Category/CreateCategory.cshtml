@using MyAcademy_MVC_CodeFirst.Data.Entities
@model InsuranceCategory

@{
    ViewBag.Title = "Yeni Kategori Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-2xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-bold text-slate-800">Yeni Kategori Oluştur</h3>
        <a href="/Admin/Category/Index" class="text-sm font-medium text-slate-500 hover:text-slate-700">
            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-sm ring-1 ring-slate-200 p-6">
        @using (Html.BeginForm("CreateCategory", "Category", FormMethod.Post))
        {
            <div class="space-y-6">

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Kategori Adı</label>
                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "w-full rounded-lg border-slate-300 focus:border-primary focus:ring focus:ring-primary/20 text-sm", placeholder = "Örn: Seyahat Sigortası" })
                    @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-red-500 text-xs mt-1" })
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">İkon Sınıfı (FontAwesome)</label>
                    <div class="flex gap-3">
                        @Html.TextBoxFor(x => x.IconClass, new { @class = "flex-1 rounded-lg border-slate-300 focus:border-primary focus:ring focus:ring-primary/20 text-sm", placeholder = "Örn: fa fa-plane" })
                        <div class="w-10 h-10 bg-slate-100 rounded-lg flex items-center justify-center text-slate-500 border border-slate-200">
                            <i class="fas fa-question"></i>
                        </div>
                    </div>
                    <p class="text-xs text-slate-400 mt-2">
                        İkon kodlarını <a href="https://fontawesome.com/v5/search" target="_blank" class="text-primary hover:underline">FontAwesome</a> sitesinden bulabilirsiniz.
                    </p>
                </div>

                <div class="pt-4 flex items-center gap-3">
                    <button type="submit" class="bg-primary text-white text-sm font-bold py-2.5 px-6 rounded-lg hover:bg-blue-700 transition w-full sm:w-auto">
                        <i class="fas fa-save me-2"></i> Kaydet
                    </button>
                    <a href="/Admin/Category/Index" class="bg-slate-100 text-slate-600 text-sm font-bold py-2.5 px-6 rounded-lg hover:bg-slate-200 transition w-full sm:w-auto text-center">
                        Vazgeç
                    </a>
                </div>
            </div>
        }
    </div>
</div>
