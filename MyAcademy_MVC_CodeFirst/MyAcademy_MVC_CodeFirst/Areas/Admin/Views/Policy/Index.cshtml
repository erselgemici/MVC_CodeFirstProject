@using MyAcademy_MVC_CodeFirst.Data.Entities
@model List<InsurancePolicy>

@{
    ViewBag.Title = "Poliçe Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <div class="p-4 border-b border-slate-100 flex items-center justify-between">
        <h3 class="font-bold text-slate-800">Poliçe Listesi</h3>
        <a href="/Admin/Policy/CreatePolicy" class="bg-primary text-white text-sm py-2 px-4 rounded hover:bg-blue-700 transition">
            <i class="fas fa-plus me-1"></i> Yeni Poliçe
        </a>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead>
                <tr class="bg-slate-50 text-xs uppercase tracking-wider text-slate-500 font-bold">
                    <th class="px-4 py-3">#</th>
                    <th class="px-4 py-3">Görsel</th>
                    <th class="px-4 py-3">Poliçe Adı</th>
                    <th class="px-4 py-3">Kategori</th>
                    <th class="px-4 py-3">Fiyat</th>
                    <th class="px-4 py-3 text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 text-sm">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-slate-50 transition">
                        <td class="px-4 py-3 font-medium">@item.PolicyID</td>
                        <td class="px-4 py-3">
                            <div class="h-10 w-10 rounded overflow-hidden border border-slate-200">
                                <img src="@Url.Content(item.ImageUrl)" alt="img" class="h-full w-full object-cover">
                            </div>
                        </td>
                        <td class="px-4 py-3 font-semibold text-slate-700">@item.PolicyName</td>
                        <td class="px-4 py-3">
                            <span class="bg-blue-100 text-primary text-xs px-2 py-1 rounded-full font-medium">
                                @item.InsuranceCategory.CategoryName
                            </span>
                        </td>
                        <td class="px-4 py-3 font-bold text-slate-800">@item.Price.ToString("C0")</td>
                        <td class="px-4 py-3 text-right">
                            <a href="/Admin/Policy/UpdatePolicy/@item.PolicyID" class="text-blue-500 hover:text-blue-700 mx-2" title="Düzenle">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/Admin/Policy/DeletePolicy/@item.PolicyID" class="text-red-500 hover:text-red-700 mx-2 btn-delete" title="Sil">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).on('click', '.btn-delete', function (e) {
        e.preventDefault();
        var deleteUrl = $(this).attr('href');
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu poliçeyi sildikten sonra geri alamazsınız!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Vazgeç',
            background: '#fff',
            customClass: { popup: 'rounded-xl shadow-lg' }
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = deleteUrl;
            }
        });
    });
</script>
