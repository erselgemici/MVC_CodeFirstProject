@using MyAcademy_MVC_CodeFirst.Data.Entities
@model InsurancePolicy

@{
    ViewBag.Title = "Poliçe Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-2xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-bold text-slate-800">Poliçe Düzenle</h3>
        <a href="/Admin/Policy/Index" class="text-sm font-medium text-slate-500 hover:text-slate-700">
            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-sm ring-1 ring-slate-200 p-6">
        @using (Html.BeginForm("UpdatePolicy", "Policy", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.PolicyID)

            <div class="space-y-6">

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Poliçe Adı</label>
                    @Html.TextBoxFor(x => x.PolicyName, new { @class = "w-full rounded-lg border-slate-300 focus:border-primary focus:ring focus:ring-primary/20 text-sm" })
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Kategori</label>
                    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.Categories, new { @class = "w-full rounded-lg border-slate-300 focus:border-primary focus:ring focus:ring-primary/20 text-sm" })
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Fiyat (₺)</label>
                    @Html.TextBoxFor(x => x.Price, new { @class = "w-full rounded-lg border-slate-300 focus:border-primary focus:ring focus:ring-primary/20 text-sm" })
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Görsel Yolu</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "w-full rounded-lg border-slate-300 focus:border-primary focus:ring focus:ring-primary/20 text-sm" })
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Açıklama</label>
                    @Html.TextAreaFor(x => x.Description, new { @class = "w-full rounded-lg border-slate-300 focus:border-primary focus:ring focus:ring-primary/20 text-sm", rows = "4" })
                </div>

                <div class="pt-4 flex items-center gap-3">
                    <button type="submit" class="bg-primary text-white text-sm font-bold py-2.5 px-6 rounded-lg hover:bg-blue-700 transition w-full sm:w-auto">
                        <i class="fas fa-sync-alt me-2"></i> Güncelle
                    </button>
                    <a href="/Admin/Policy/Index" class="bg-slate-100 text-slate-600 text-sm font-bold py-2.5 px-6 rounded-lg hover:bg-slate-200 transition w-full sm:w-auto text-center">Vazgeç</a>
                </div>
            </div>
        }
    </div>
</div>
