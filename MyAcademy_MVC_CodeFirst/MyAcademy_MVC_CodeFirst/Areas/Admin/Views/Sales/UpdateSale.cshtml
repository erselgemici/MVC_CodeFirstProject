@model MyAcademy_MVC_CodeFirst.Data.Entities.Sale
@{
    ViewBag.Title = "UpdateSale";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-bold text-slate-800">Satış Kaydını Düzenle</h3>
        <a href="/Admin/Sales/Index" class="text-sm font-medium text-slate-500 hover:text-slate-700">
            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-sm p-6 ring-1 ring-slate-200">
        @using (Html.BeginForm("UpdateSale", "Sales", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.SaleID)

            <div class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Müşteri</label>
                    @Html.DropDownListFor(x => x.CustomerID, (List<SelectListItem>)ViewBag.Customers, new { @class = "w-full rounded-lg border-slate-300 focus:ring-primary/20 text-sm" })
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Poliçe</label>
                    @Html.DropDownListFor(x => x.PolicyID, (List<SelectListItem>)ViewBag.Policies, new { @class = "w-full rounded-lg border-slate-300 focus:ring-primary/20 text-sm" })
                </div>

                <div class="bg-yellow-50 p-4 rounded-lg border border-yellow-100 flex gap-3">
                    <i class="fas fa-exclamation-triangle text-yellow-600 mt-0.5"></i>
                    <p class="text-xs text-yellow-700 leading-relaxed">
                        <strong>Dikkat:</strong> Poliçeyi değiştirdiğinizde, satış tutarı yeni poliçenin güncel fiyatına göre otomatik olarak güncellenecektir.
                    </p>
                </div>

                <div class="pt-2">
                    <button type="submit" class="w-full bg-primary text-white py-3 rounded-lg font-bold hover:bg-blue-700 transition">
                        <i class="fas fa-sync-alt me-2"></i> Güncelle
                    </button>
                </div>
            </div>
        }
    </div>
</div>

