<!DOCTYPE html>
<html lang="tr" class="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - LifeSure Admin</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#0d6efd",
                        "navy-dark": "#2c3e50",
                        "background-light": "#f4f6f9",
                    },
                    fontFamily: {
                        "sans": ["Inter", "sans-serif"],
                    },
                },
            },
        }
    </script>

    <style>
        .no-scrollbar::-webkit-scrollbar {
            display: none;
        }

        .no-scrollbar {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

        body {
            background-color: #f4f6f9;
        }
    </style>
</head>
<body class="bg-background-light text-slate-900 font-sans">

    <div class="flex h-screen overflow-hidden">

        <aside class="hidden md:flex flex-col w-64 bg-navy-dark text-white shrink-0">
            <div class="p-6 flex items-center gap-3 border-b border-white/10">
                <div class="bg-primary p-2 rounded-lg">
                    <span class="material-symbols-outlined text-white">shield</span>
                </div>
                <h1 class="text-xl font-bold tracking-tight">LifeSure Admin</h1>
            </div>

            <nav class="flex-1 overflow-y-auto p-4 space-y-6">
                <div>
                    <a class="flex items-center gap-3 px-4 py-3 bg-primary rounded-lg text-white mb-2" href="/Admin/Dashboard/Index">
                        <span class="material-symbols-outlined">dashboard</span>
                        <span class="font-medium">Dashboard</span>
                    </a>
                </div>

                <div>
                    <h3 class="px-4 text-xs font-semibold text-slate-400 uppercase tracking-wider mb-2">Sigorta İşlemleri</h3>
                    <div class="space-y-1">
                        <a href="/Admin/Category/Index" class="flex items-center gap-3 px-4 py-2 text-slate-300 hover:bg-white/10 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-xl">category</span>
                            <span class="text-sm">Kategoriler</span>
                        </a>
                        <a href="/Admin/Policy/Index" class="flex items-center gap-3 px-4 py-2 text-slate-300 hover:bg-white/10 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-xl">description</span>
                            <span class="text-sm">Poliçeler</span>
                        </a>
                        <a href="/Admin/Customer/Index" class="flex items-center gap-3 px-4 py-2 text-slate-300 hover:bg-white/10 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-xl">group</span>
                            <span class="text-sm">Müşteriler</span>
                        </a>
                        <a href="/Admin/Sales/Index" class="flex items-center gap-3 px-4 py-2 text-slate-300 hover:bg-white/10 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-xl">payments</span>
                            <span class="text-sm">Satışlar</span>
                        </a>
                    </div>
                </div>

                <div class="mt-4">
                    <h3 class="px-4 text-xs font-semibold text-slate-400 uppercase tracking-wider mb-2">İçerik Yönetimi</h3>
                    <div class="space-y-1">
                        <a href="/Admin/Feature/Index" class="flex items-center gap-3 px-4 py-2 text-slate-300 hover:bg-white/10 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-xl">star</span>
                            <span class="text-sm">Öne Çıkanlar (Feature)</span>
                        </a>
                        <a href="/Admin/Slider/Index" class="flex items-center gap-3 px-4 py-2 text-slate-300 hover:bg-white/10 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-xl">imagesmode</span>
                            <span class="text-sm">Slider / Banner</span>
                        </a>
                        <a href="/Admin/About/Index" class="flex items-center gap-3 px-4 py-2 text-slate-300 hover:bg-white/10 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-xl">info</span>
                            <span class="text-sm">Hakkımızda</span>
                        </a>
                    </div>
                </div>

                <div>
                    <h3 class="px-4 text-xs font-semibold text-slate-400 uppercase tracking-wider mb-2">Diğer</h3>
                    <a href="/" class="flex items-center gap-3 px-4 py-2 text-slate-300 hover:bg-white/10 rounded-lg transition-colors" target="_blank">
                        <span class="material-symbols-outlined text-xl">public</span>
                        <span class="text-sm">Siteye Git</span>
                    </a>
                </div>
            </nav>
        </aside>

        <div class="flex-1 flex flex-col overflow-hidden">

            <header class="h-16 bg-white border-b border-slate-200 flex items-center justify-between px-4 shrink-0">
                <div class="flex items-center gap-3">
                    <button class="md:hidden text-slate-600">
                        <span class="material-symbols-outlined">menu</span>
                    </button>
                    <h2 class="text-lg font-bold text-slate-800">@ViewBag.Title</h2>
                </div>

                <div class="flex-1 max-w-xs mx-4 hidden sm:block">
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-xl">search</span>
                        <input class="w-full pl-10 pr-4 py-1.5 bg-slate-100 border-none rounded-full text-sm focus:ring-2 focus:ring-primary/20" placeholder="AI ile Ara..." type="text" />
                    </div>
                </div>

                <div class="flex items-center gap-4">
                    <div class="flex items-center gap-2">
                        <div class="text-right hidden sm:block">
                            <p class="text-xs font-bold text-slate-800 leading-none">Admin</p>
                            <p class="text-[10px] text-slate-500">Yönetici</p>
                        </div>
                        <div class="w-9 h-9 rounded-full overflow-hidden border border-slate-200 bg-gray-200">
                            <span class="material-symbols-outlined text-slate-500 p-1">person</span>
                        </div>
                    </div>
                </div>
            </header>

            <main class="flex-1 overflow-y-auto p-4 md:p-6 bg-background-light">
                @RenderBody()
            </main>

        </div>
    </div>
</body>
</html>
