@model MyAcademy_MVC_CodeFirst.Data.Entities.Customer
@{
    ViewBag.Title = "Yeni Müşteri";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-2xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-bold text-slate-800">Yeni Müşteri Kartı</h3>
        <a href="/Admin/Customer/Index" class="text-sm font-medium text-slate-500 hover:text-slate-700"><i class="fas fa-arrow-left me-1"></i> Geri Dön</a>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-6 ring-1 ring-slate-200">
        @using (Html.BeginForm("CreateCustomer", "Customer", FormMethod.Post))
        {
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Ad</label>
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "w-full rounded-lg border-slate-300 focus:ring-primary/20 text-sm" })
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Soyad</label>
                    @Html.TextBoxFor(x => x.LastName, new { @class = "w-full rounded-lg border-slate-300 focus:ring-primary/20 text-sm" })
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">E-Posta</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "w-full rounded-lg border-slate-300 focus:ring-primary/20 text-sm", type = "email" })
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Telefon</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "w-full rounded-lg border-slate-300 focus:ring-primary/20 text-sm" })
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-slate-700 mb-2">Şehir</label>
                    @Html.TextBoxFor(x => x.City, new { @class = "w-full rounded-lg border-slate-300 focus:ring-primary/20 text-sm" })
                </div>
            </div>
            <div class="mt-6 pt-4 border-t border-slate-100 flex gap-3">
                <button type="submit" class="bg-primary text-white py-2.5 px-6 rounded-lg font-bold hover:bg-blue-700 transition">Kaydet</button>
            </div>
        }
    </div>
</div>
