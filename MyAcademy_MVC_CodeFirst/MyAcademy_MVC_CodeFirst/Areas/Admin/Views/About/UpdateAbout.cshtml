@model MyAcademy_MVC_CodeFirst.Data.Entities.About

@{
    ViewBag.Title = "Hakkımızda Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-2xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-bold text-slate-800">İçeriği Düzenle</h3>
        <a href="/Admin/About/Index" class="text-sm font-medium text-slate-500 hover:text-slate-700">
            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-sm ring-1 ring-slate-200 p-6">
        @using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.AboutID)

            <div class="space-y-5">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Başlık</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "w-full rounded-lg border-slate-300 focus:ring-primary/20 text-sm" })
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Görsel Yolu</label>
                    <div class="flex gap-3">
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "w-full rounded-lg border-slate-300 focus:ring-primary/20 text-sm" })
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Url.Content(Model.ImageUrl)" class="h-10 w-16 object-cover rounded border" />
                        }
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">Açıklama</label>
                    @Html.TextAreaFor(x => x.Description, new { @class = "w-full rounded-lg border-slate-300 focus:ring-primary/20 text-sm", rows = "5" })
                </div>

                <div class="bg-blue-50 p-4 rounded-lg border border-blue-100">
                    <label class="block text-sm font-bold text-blue-800 mb-2">Özellikler (Maddeler)</label>
                    @Html.TextAreaFor(x => x.Features, new { @class = "w-full rounded-lg border-blue-200 focus:ring-blue-500/20 text-sm", rows = "3" })
                    <p class="text-xs text-blue-600 mt-2">Maddeleri virgül (,) ile ayırınız.</p>
                </div>

                <div class="pt-2">
                    <button type="submit" class="w-full bg-primary text-white py-3 rounded-lg font-bold hover:bg-blue-700 transition">
                        <i class="fas fa-sync-alt me-2"></i> Güncelle
                    </button>
                </div>
            </div>
        }
    </div>
</div>
