@model List<MyAcademy_MVC_CodeFirst.Data.Entities.About>

@{
    ViewBag.Title = "Hakkımızda Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <div class="p-4 border-b border-slate-100 flex justify-between items-center">
        <h3 class="font-bold text-slate-800 text-lg">Hakkımızda Bölümleri</h3>
        <a href="/Admin/About/CreateAbout" class="bg-primary text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition text-sm font-medium">
            <i class="fas fa-plus me-2"></i> Yeni Ekle
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead>
                <tr class="bg-slate-50 text-xs uppercase text-slate-500 font-bold border-b border-slate-100">
                    <th class="px-6 py-3">Görsel</th>
                    <th class="px-6 py-3">Başlık</th>
                    <th class="px-6 py-3 w-1/2">Açıklama</th>
                    <th class="px-6 py-3 text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 text-sm">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-slate-50 transition">
                        <td class="px-6 py-4 align-top">
                            <img src="@Url.Content(item.ImageUrl)" class="w-24 h-16 object-cover rounded border border-slate-200" alt="img" onerror="this.src='https://via.placeholder.com/64'" />
                        </td>
                        <td class="px-6 py-4 font-semibold text-slate-800 align-top whitespace-nowrap">
                            @item.Title
                        </td>
                        <td class="px-6 py-4 text-slate-600 align-top">
                            @item.Description
                        </td>
                        <td class="px-6 py-4 text-right align-top">
                            <div class="flex items-center justify-end gap-2">
                                <a href="/Admin/About/UpdateAbout/@item.AboutID" class="text-blue-600 hover:text-blue-800 p-2" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/Admin/About/DeleteAbout/@item.AboutID" class="text-red-600 hover:text-red-800 p-2 btn-delete" title="Sil">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).on('click', '.btn-delete', function (e) {
        e.preventDefault();
        var deleteUrl = $(this).attr('href');
        Swal.fire({
            title: 'Silmek İstiyor musunuz?',
            text: "Bu işlem geri alınamaz!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, Sil',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = deleteUrl;
            }
        });
    });
</script>
