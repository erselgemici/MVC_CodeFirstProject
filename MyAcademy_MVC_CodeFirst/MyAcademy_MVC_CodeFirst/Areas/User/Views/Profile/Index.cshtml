@model MyAcademy_MVC_CodeFirst.Data.Entities.AppUser
@{
    ViewBag.Title = "Profil Ayarları";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="max-w-3xl mx-auto">

    <div class="mb-6">
        <h2 class="text-2xl font-bold text-slate-800">Hesap Ayarları</h2>
        <p class="text-slate-500">Kişisel bilgilerinizi ve giriş şifrenizi buradan yönetebilirsiniz.</p>
    </div>

    @if (ViewBag.Success != null)
    {
        <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-6 flex items-center gap-2">
            <span class="material-symbols-outlined">check_circle</span>
            @ViewBag.Success
        </div>
    }

    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">

        <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex flex-col sm:flex-row items-center gap-6">
            <div class="relative">
                <div class="w-24 h-24 rounded-full overflow-hidden border-4 border-white shadow-md">
                    <img src="https://ui-avatars.com/api/?name=@Model.FullName&background=059669&color=fff&size=128" class="w-full h-full object-cover">
                </div>
                <button class="absolute bottom-0 right-0 bg-white p-1.5 rounded-full shadow-sm border border-slate-200 text-slate-500 hover:text-primary transition">
                    <span class="material-symbols-outlined text-sm">photo_camera</span>
                </button>
            </div>
            <div class="text-center sm:text-left">
                <h3 class="text-lg font-bold text-slate-800">@Model.FullName</h3>
                <p class="text-sm text-slate-500">Bireysel Müşteri</p>
            </div>
        </div>

        <div class="p-8">
            <form method="post" class="space-y-6">
                @Html.HiddenFor(x => x.UserID)

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">Ad Soyad</label>
                        @Html.TextBoxFor(x => x.FullName, new { @class = "w-full rounded-lg border-slate-300 focus:border-primary focus:ring-primary transition shadow-sm" })
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">E-posta Adresi</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "w-full rounded-lg border-slate-300 focus:border-primary focus:ring-primary transition shadow-sm", type = "email" })
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">Yeni Şifre</label>
                    <div class="relative">
                        @Html.TextBoxFor(x => x.Password, new { @class = "w-full rounded-lg border-slate-300 focus:border-primary focus:ring-primary transition shadow-sm pl-10", type = "password" })
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">lock</span>
                    </div>
                    <p class="text-xs text-slate-400 mt-1">Şifrenizi değiştirmek istemiyorsanız mevcut şifrenizi bırakın.</p>
                </div>

                <div class="pt-4 flex justify-end">
                    <button class="bg-primary hover:bg-primary-hover text-white font-bold py-3 px-8 rounded-xl shadow-lg shadow-emerald-200 transition-all transform hover:-translate-y-1 flex items-center gap-2">
                        <span class="material-symbols-outlined">save</span>
                        Değişiklikleri Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
