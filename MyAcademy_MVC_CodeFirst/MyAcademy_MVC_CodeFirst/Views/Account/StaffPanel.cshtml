@model MyAcademy_MVC_CodeFirst.Data.Entities.AppUser
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>LifeSure - Personel Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .staff-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-5">
        <div class="container">
            <a class="navbar-brand" href="#"><i class="fab fa-slack me-2"></i> LifeSure Staff</a>
            <div class="d-flex align-items-center">
                <span class="text-white me-3">
                    <i class="fa fa-user-circle me-1"></i> @Model.FullName
                </span>
                <a href="/Account/Logout" class="btn btn-danger btn-sm rounded-pill px-3">Çıkış Yap</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card staff-card bg-white p-5 text-center">
                    <div class="mb-4">
                        <i class="fa fa-id-card text-primary fa-4x mb-3"></i>
                        <h2 class="fw-bold">Personel Paneline Hoş Geldiniz</h2>
                        <p class="text-muted lead">Merhaba <strong>@Model.FullName</strong>, sisteme başarıyla giriş yaptınız.</p>
                    </div>

                    <div class="alert alert-info">
                        <i class="fa fa-info-circle me-2"></i> Yetki Seviyeniz: <strong>@Model.Role</strong>
                    </div>

                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center mt-5">
                        <button class="btn btn-success px-4 py-2">
                            <i class="fa fa-plus-circle me-2"></i> Yeni Satış Ekle
                        </button>
                        <button class="btn btn-outline-primary px-4 py-2">
                            <i class="fa fa-list-alt me-2"></i> Satışlarım
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
