@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <title>LifeSure | Giriş</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f4f7f6;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login-card {
            width: 400px;
            padding: 40px;
            border-radius: 15px;
            background: white;
            shadow: 0 10px 25px rgba(0,0,0,0.05);
        }

        .btn-primary {
            background: #4e73df;
            border: none;
            padding: 12px;
            border-radius: 8px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="login-card shadow">
        <h3 class="text-center mb-4 text-primary">LifeSure Admin</h3>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form action="/Account/Login" method="post">
            <div class="mb-3">
                <label class="form-label">E-posta</label>
                <input type="email" name="email" class="form-control" placeholder="admin@lifesure.com" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Şifre</label>
                <input type="password" name="password" class="form-control" placeholder="****" required>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Sisteme Giriş Yap</button>
        </form>
    </div>
</body>
</html>
