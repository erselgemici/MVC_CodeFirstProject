
@using MyAcademy_MVC_CodeFirst.Data.Entities
@model CompanySetting

<div class="container-fluid topbar px-0 px-lg-4 bg-light py-2 d-none d-lg-block">
    <div class="container">
        <div class="row gx-0 align-items-center">
            <div class="col-lg-8 text-center text-lg-start mb-lg-0">
                <div class="d-flex flex-wrap">
                    <div class="border-end border-primary pe-3">
                        <a href="#" class="text-muted small"><i class="fas fa-map-marker-alt text-primary me-2"></i>@Model.Address</a>
                    </div>
                    <div class="ps-3">
                        <a href="mailto:@Model.Email" class="text-muted small"><i class="fas fa-envelope text-primary me-2"></i>@Model.Email</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-center text-lg-end">
                <div class="d-flex justify-content-end">
                    <div class="d-flex border-end border-primary pe-3">
                        <a class="btn p-0 text-primary me-3" href="@Model.FacebookUrl"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn p-0 text-primary me-3" href="@Model.TwitterUrl"><i class="fab fa-twitter"></i></a>
                        <a class="btn p-0 text-primary me-3" href="@Model.InstagramUrl"><i class="fab fa-instagram"></i></a>
                        <a class="btn p-0 text-primary me-0" href="@Model.LinkedinUrl"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
