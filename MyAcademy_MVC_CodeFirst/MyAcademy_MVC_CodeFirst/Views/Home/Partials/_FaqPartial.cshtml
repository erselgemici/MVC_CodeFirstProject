@using MyAcademy_MVC_CodeFirst.Data.Entities
@model List<Faq>

<div class="container-fluid faq-section bg-light py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-xl-6 wow fadeInLeft" data-wow-delay="0.2s">
                <div class="h-100">
                    <div class="mb-5">
                        <h4 class="text-primary">Sıkça Sorulan Sorular</h4>
                        <h1 class="display-4 mb-0">Merak Ettikleriniz</h1>
                    </div>
                    <div class="accordion" id="accordionExample">

                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var item = Model[i];
                            var collapseId = "collapse" + i;
                            var headingId = "heading" + i;
                            var showClass = i == 0 ? "show active" : "";
                            var collapsedClass = i == 0 ? "" : "collapsed";

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="@headingId">
                                    <button class="accordion-button @collapsedClass border-0" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="true" aria-controls="@collapseId">
                                        @item.Question
                                    </button>
                                </h2>
                                <div id="@collapseId" class="accordion-collapse collapse @showClass" aria-labelledby="@headingId" data-bs-parent="#accordionExample">
                                    <div class="accordion-body rounded">
                                        @item.Answer
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
            <div class="col-xl-6 wow fadeInRight" data-wow-delay="0.4s">
                <img src="~/Theme/Lifesure/img/carousel-2.png" class="img-fluid w-100" alt="">
            </div>
        </div>
    </div>
</div>
