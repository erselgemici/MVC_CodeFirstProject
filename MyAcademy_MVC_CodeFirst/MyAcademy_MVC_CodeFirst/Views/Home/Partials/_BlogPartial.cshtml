@using MyAcademy_MVC_CodeFirst.Data.Entities
@model List<BlogPost>

<div class="container-fluid blog py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Blogumuzdan</h4>
            <h1 class="display-4 mb-4">Haberler ve Güncellemeler</h1>
        </div>
        <div class="row g-4 justify-content-center">

            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-xl-4 wow fadeInUp" data-wow-delay="0.2s">
                    <div class="blog-item">
                        <div class="blog-img">
                            <img src="@Url.Content(item.ImageUrl)" class="img-fluid rounded-top w-100" alt="">
                            <div class="blog-categiry py-2 px-4">
                                <span>@item.Category</span>
                            </div>
                        </div>
                        <div class="blog-content p-4">
                            <div class="blog-comment d-flex justify-content-between mb-3">
                                <div class="small"><span class="fa fa-user text-primary"></span> Admin</div>
                                <div class="small"><span class="fa fa-calendar text-primary"></span> @item.PublishedDate.ToString("dd MMM yyyy")</div>
                            </div>
                            <a href="#" class="h4 d-inline-block mb-3">@item.Title</a>
                            <p class="mb-3">@item.Content.Substring(0, item.Content.Length > 60 ? 60 : item.Content.Length)...</p>
                            <a href="#" class="btn p-0">Devamını Oku <i class="fa fa-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
