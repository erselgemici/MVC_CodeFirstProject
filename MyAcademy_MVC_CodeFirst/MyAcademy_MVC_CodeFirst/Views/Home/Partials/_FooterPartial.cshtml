
@using MyAcademy_MVC_CodeFirst.Data.Entities
@model CompanySetting

<div class="container-fluid footer py-5 wow fadeIn" data-wow-delay="0.2s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-xl-9">
                <div class="mb-5">
                    <div class="row g-4">
                        <div class="col-md-6 col-lg-6 col-xl-5">
                            <div class="footer-item">
                                <a href="/" class="p-0">
                                    <h3 class="text-white"><i class="fab fa-slack me-3"></i> @Model.CompanyName</h3>
                                </a>
                                <p class="text-white mb-4">@Model.Description</p>
                                <div class="footer-btn d-flex">
                                    <a class="btn btn-md-square rounded-circle me-3" href="@Model.FacebookUrl"><i class="fab fa-facebook-f"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-6 col-xl-4">
                            <div class="footer-item">
                                <h4 class="mb-4 text-white">İletişim</h4>
                                <div class="row g-3">
                                    <div class="col-12">
                                        <p class="text-white"><i class="fas fa-map-marker-alt me-2"></i>@Model.Address</p>
                                        <p class="text-white"><i class="fas fa-envelope me-2"></i>@Model.Email</p>
                                        <p class="text-white"><i class="fa fa-phone-alt me-2"></i>@Model.Phone</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
